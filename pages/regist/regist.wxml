<view class="loading-mask" hidden="{{mask}}">
  <view class="box">
    <view class="loader"></view>
  </view>
</view>
<view class="regist-title">注册</view>
<view class="input-group">
  <input bindinput="nameBindChange" placeholder-class="phstyle" type="text" value="{{name}}" placeholder="请输入用户名"/>
  <input bindinput="phoneBindChange" placeholder-class="phstyle" type="text" value="{{phone}}" placeholder="请输入手机号码"/>
</view>
<view class="code-box">
  <input bindinput="codeBindChange" placeholder-class="phstyle" value="{{code}}" type="text" placeholder="请输入6位短信验证码" />
  <text wx:if="{{setTimr}}" class="disabled">重新获取{{count}}s</text>
  <text wx:else bindtap="getCode">获取验证码</text>
</view>
<view class="footer-button">
    <button bindtap="regist" hover-class="deep" class="submit-btn">注册</button>
</view>
page {
	background-color:#eeeeee;
}
.introduce-image{
  width: 100%;
  height: 150px;
  border-radius: 5px;
}
view {
  background: #fff;
}

.content {
  margin-top: 10px;
  padding: 15px;
}
text {
  line-height: 2;
  font-size: 14px;
  font-weight: normal;
}
.underline {
  border-bottom: 1px solid #eeeeee;
}
.introduce-title {
  font-size: 16px;
  font-weight: 400;
}
.introduce-address {
  color: #0366d6;
  font-size: 12px;
  display: flex;
  align-items: center;
}
.introduce-address:hover{
  text-decoration: underline;
}
.introduce-address text {
  flex: auto;
}
.address-more {
  width: 15px;
  height: 15px;
}
.address-icon {
  width: 15px;
  height: 15px;
  margin-right: 10px;
}
.reservation-time {
  padding-bottom: 10px;
  font-size: 16px;
}
.time-item {
  padding: 0;
}
.time-item .date-text {
  width: 65px;
  display: inline-block;
}
.time-item text:nth-child(2) {
  margin-left: 10px;
}
.time-item text {
  font-size: 14px;
}

.submit-btn {
  position: fixed;
  bottom: 0;
}
.deep {
  background-color: #0652a8;
}
<view class="reservation-detail">
  <view class="detail-header">预约详情</view>
  <view class="detail-body">
    <view class="detail-name">
      <text class="name">{{ reservation.project_name }}</text>
      <text class="state">{{ reservation.state }}</text>
    </view>
    <view class="detail-datetime">
      <text class="date">{{ reservation.date }}</text>
      <text class="time">{{ reservation.time }}</text>
    </view>
    <view class="detail-address" bindtap="openMap">{{ reservation.address }}</view>
    <view class="detail-user">
      <view class="user-information">
        <text>姓名</text>
        <text>{{ reservation.name }}</text>
      </view>
      <view class="user-information">
        <text>手机号码</text>
        <text>{{ reservation.tel }}</text>
      </view>
    </view>
  </view>
  <view class="detail-footer">
    <button type="primary">取消预约</button>
  </view>
</view>
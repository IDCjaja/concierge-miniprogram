page {
  height: 100%;
	background-color:#f6f9fe;
}
.detail-card {
  margin: 10px 15px;
  border-radius: 5px;
  box-shadow: 0 0 20px #ccc;
}
.reservation-detail {
  height: 100%;
  position: relative;
  margin-top: 10px;
}
view {
  background: #fff;
}
.detail-header {
  font-size:16px;
  padding:15px;
  padding-top: 22px;
  border-bottom:1px solid #f1f1f1;
  color: #fff;
  background: #6177ff;
}
.detail-title {
  text-align: center;
  font-weight: bold;
  background: #6177ff;
}
.detail-Qrcode {
  text-align: center;
  padding: 10px 0;
}
.detail-Qrcode image {
  width: 150px;
  height: 150px;
  display: block;
  margin: 0 auto;
}
.detail-body {
  margin-left: 15px;
  padding: 15px;
  padding-left: 0;
  border-top: 1px solid #f1f1f1;
}
.detail-name {
  display:flex;
  justify-content:space-between;
  margin:10px 0;
}
.name {
  font-size: 16px;
  padding-left: 20px;
}
.state {
  display: flex;
  align-items: center;
  font-size: 24px;
  padding: 15px 0;
  background: #6177ff;
}
.state image {
  width: 15px;
  height: 15px;
  margin-right: 5px;
}
.detail-datename {
  margin-bottom: 10px;
}
.date {
  margin-right: 5px;
}
.detail-address {
  padding:15px;
  border-top:1px solid #f1f1f1;
  border-bottom:1px solid #f1f1f1;
  display: flex;
  align-items: center;
  margin-bottom: 50px;
}
.detail-address:hover {
  text-decoration: underline;
}
.detail-address text {
  flex:  0 0 85%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.address-more {
  width: 15px;
  height: 15px;
}
.address-icon {
  width: 15px;
  height: 15px;
  margin-right: 10px;
}
.user-information {
  margin-bottom:8.5px;
  display:flex;
  justify-content:space-between;
  align-items:center;
}
.user-information:last-child {
  margin-bottom: 0;
}
.detail-times {
  display: flex;
  justify-content: space-between;
}
.detail-cancelMessage {
  white-space: nowrap;
  margin-right: 15px;
}
.cancelRemark {
  max-width: 60%;
  word-break: break-all;
  word-wrap: break-word;

}
.detail-footer {
  position:fixed;
  width:100%;
  bottom:0;
  background-color: #fff; 
}
.detail-footer .warning-text {
  padding: 10px;
}
.submit-btn {
  width: auto;
  margin: 0 15px;
}
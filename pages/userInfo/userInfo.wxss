.page-body-info {
  background-image: url('http://p1ctmsz1g.bkt.clouddn.com/userInfo-bac.jpg');
  background-size: cover;
  padding: 30px 0;
  margin-bottom: 20px;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 78px;
  height: 78px;
  margin-bottom: 12px;
  border-radius: 50%;
  overflow:hidden;
  display:block
}
.userinfo-nickname {
  color: #aaa;
  font-size: 18px;
  color: #fff;
}
.item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12px 15px;
}
.item-icon {
  width: 20px;
  height: 20px;
}
.item-title {
  flex: auto;
  padding-left: 15px;
  font-size: 15px;
  color: #333;
}
.item-truncate {
  width: 20px;
  height: 20px;
}

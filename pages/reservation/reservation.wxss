page {
  min-height: 100%;
  background-color: #f5f5f5;
  overflow: hidden;
}
text.required {
  padding: 10px;
}
text.required::before {
  content:'*';
  color: red;
}
text.block,text.block {
  display: block;
  margin: 5px;
}
input {
  background-color: #fff;
  padding: 10px;
  margin: 5px 0;
  font-size: 14px;
}
.code-box {
  display: flex;
  align-items: center;
  background-color: #fff;
}
.code-box input {
  flex: auto;
  margin: 0;
}
.code-box text {
  color:  #0366d6;
  padding:0 10px;
  white-space: nowrap;
  margin: 0;
  border: none;
  border-left: 1px solid #ccc;
  background-color: #fff;
  font-size: 14px;
}
.code-box text:hover {
  color: #0652a8;
}
.code-box text.disabled {
  color: #ccc;
}
.picker-text {
  width: 100%;
  background: #fff;
  line-height: 42px;
  display: flex;
  align-items: center;
  min-height: 42px;
}
.picker-value {
  flex: auto;
  padding: 0 10px;
}

.picker-icon {
  width: 25px;
  height: 25px;
  text-align: right;
  padding-right: 10px;
}
/*多项时间选择器*/
.mask {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0,0,0,.4);
  z-index: 990;
  transition: all .8s;
}
.mask.hidden{
  display: none;
}
.mask.show {
  display: block;
}
.picker-custom {
  width: 100%;
  position: absolute;
  z-index: 999;
  bottom: 0;
  background: #fff;
  transition: all .4s;
}
.picker-btngroup {
  display: flex;
}
.picker-btn {
  flex: 1;
  font-size: 16px;
  line-height: 40px;
}
.cancel-btn {
  text-align: left;
  color: #ccc;
}
.confirm-btn {
  text-align: right;
  color: #1AAD19;
}
.picker-box {
  width: 100%;
  display: flex;
  align-items: center;
}
.multipicker-value {
  flex: auto;
  padding: 0 10px;
  display: flex;
}
.multipicker-date {
  margin-right: 10px;
}
picker-view {
  height: 200px;
  flex: 4;
}
picker-view view {
  text-align: center;
}
.multi-column {
  line-height: 50px;
  height: 50px;
  overflow: hidden;
  text-align: center;
}
.multi-picker {
  height: 300px;
  flex: 5;
}
.selected-icon {
  width: 20px;
  height: 20px;
}
.notSelected{
  visibility: hidden;
}
.picker-hidden {
  transform: translateY(100%)
}
.picker-show {
  transform: translateY(0)
}
.selected{
  visibility: visible
}
.warning {
  color: red;
  font-size: 12px;
}
.footer-button {
  width: 100%;
  position: absolute;
  bottom: 0;
  margin-top: 20px;
}
.deep {
  background-color: #0652a8;
}
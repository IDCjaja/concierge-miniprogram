<view>
  <text class="required block" >姓名</text>
  <input type="text" bindinput="bindNameChange" value="{{name}}" placeholder-class="phstyle" placeholder="请输入预约人姓名" />
  <text class="required block">手机号码</text>
  <input type="text"  bindinput="bindPhoneChange" value="{{phone}}" placeholder-class="phstyle" placeholder="请输入手机号"/>
  <view class="code-box">
    <input placeholder="请输入验证码" bindinput="bindCodeChange" value="{{code}}" placeholder-class="phstyle" />
    <text wx:if="{{setTimr}}" class="disabled">重新获取{{count}}s</text>
    <text wx:else bindtap="getCode">获取验证码</text>
  </view>
  <text wx:if="{{nameAjx}}" class="block warning">请填写姓名</text>
  <text wx:if="{{phoneAjx}}" class="block warning">手机格式不正确</text>
</view>
<view class="section">
  <text class="required block">预约时间</text>
  <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcancel="bindMultiPickerCancel" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
    <view class="picker picker-text">
      <text class="picker-value">{{selectValue}}</text>
      <image class="picker-icon" src="../../images/time.png" />
    </view>
  </picker>
</view>
<view class="footer-button">
  <button bindtap="order" hover-class="deep" disabled="{{buttonDis}}" class="submit-btn">提交预约</button>
</view>